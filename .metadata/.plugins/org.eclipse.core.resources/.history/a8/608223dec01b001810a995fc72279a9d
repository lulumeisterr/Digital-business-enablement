package br.com.fiap.BO;

import java.util.ArrayList;

import javax.swing.JOptionPane;

import br.com.fiap.bean.Produto;

public class EstoqueBO {

	private int n1;

	private static Produto p = new Produto();
	
	ArrayList<Produto> listaProd = new ArrayList<>();
	
	public EstoqueBO(){
		
		Produto pTO = new Produto();
		
		pTO.setCdProd(401);
		pTO.setDescricao("Camiseta Masculina Manga Curta Branca");
		pTO.setPreco(25.0);
		pTO.setEstoque(5);
		
		listaProd.add(pTO);
		
		Produto pTO2 = new Produto();
		
		pTO.setCdProd(402);
		pTO.setDescricao("Camiseta Feminina Manga Longa Rosa");
		pTO.setPreco(10.0);
		pTO.setEstoque(2);
		
	}
	
	public static int LerEntradaDados(int n1) throws Exception {
		n1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o codigo do produto"));
		TratarDadosRecebido(n1);
		return n1;
	}

	
	public static int TratarDadosRecebido(int n1)throws Exception {
		if(!(n1 == 401) && (!(n1 == 402))){
			throw new Exception("Codigo não cadastrado");
		}else if(n1 == 401 || n1 == 402){
			Imprimindo(n1);
		}
		return n1;
	}
	
	
	public static int Imprimindo(int n1){
		if(n1 == 401){
			return n1;
		}else{
			return n1;
		}
	}

}
