package br.com.fiap.BO;

import java.text.SimpleDateFormat;
import java.util.Calendar;

import javax.swing.JOptionPane;

public class EstoqueBO {

	private int n1;

	public static int LerEntradaDados(int n1) throws Exception {
		n1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o codigo do produto")); 
		TratarDadosRecebido(n1);
		
		return n1;
	}

	
	public static int TratarDadosRecebido(int n1)throws Exception {
		if(!(n1 == 401) && (!(n1 == 402))){
			throw new Exception("Codigo não cadastrado");
		}else if(n1 == 401 || n1 == 402){
			Imprimindo(n1);
		}
		return n1;
	}
	
	
	public static int Imprimindo(int n1){
		if(n1 == 401){
			return n1;
		}else{
			return n1;
		}
	}

}
